<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>MediCare Login & Sign Up</title>
    <link rel="stylesheet" href="/styles/global.css" />

  <link rel="stylesheet" href="/styles/login.css" />
</head>
<body>

  <div class="left-section">

    <!-- Logo -->
    <div class="logo">
      <div class="logo-icon"></div>
      <div class="logo-text">HospiConnect</div>
    </div>

    <!-- LOGIN FORM -->
    <div id="login-form">
      <div class="title">Login</div>
      <form id="login-form-element">
        <div class="form-group">
          <input type="email" id="login-email" placeholder="Email address" required />
        </div>
        <div class="form-group">
          <input type="password" id="login-password" placeholder="Password" required />
        </div>
        <div class="forgot">Forgot password?</div>
        <button class="btn" type="submit">Sign in</button>
        <p style="margin-top:10px; font-size: 14px;">Don't have an account? <span id="sign-up-link" class="form-toggle">Sign up</span></p>
      </form>
    </div>

    <!-- SIGN-UP FORM -->
    <div id="signup-form" class="hidden">
      <div class="title">Sign Up</div>
      <form id="signup-form-element" action="/api/auth/signup" method="POST">
        <div class="form-group">
          <input type="text" id="signup-name" name="name" placeholder="Full Name" required />
        </div>
        <div class="form-group">
          <input type="email" id="signup-email" name="email" placeholder="Email address" required />
        </div>
        <div class="form-group">
          <input type="password" id="signup-password" name="password" placeholder="Password" required />
        </div>
        <div class="form-group">
          <input type="text" id="signup-phone" name="mobileNumber" placeholder="Phone Number" required />
        </div>
        <div class="form-group">
          <input type="text" id="signup-birthdate" name="DOB" placeholder="Date of Birth (YYYY-MM-DD)" required />
        </div>
        <div class="form-group">
          <input type="text" id="signup-gender" name="gender" placeholder="Gender" required />
        </div>
        <div class="form-group">
          <input type="text" id="signup-address" name="address" placeholder="Address" required />
        </div>
        <button class="btn" type="submit">Create Account</button>
        <p style="margin-top:10px; font-size: 14px;">Already have an account? <span id="login-link" class="form-toggle">Log in</span></p>
      </form>
    </div>

  </div>

  <div class="right-section">
    <img src="/assets/Welcome2.jpg" alt="Hospital Illustration" class="illustration"/>
  </div>

  <script src="/scripts/login.js"></script>
</body>
</html>